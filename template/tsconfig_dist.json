{
   "compilerOptions": {
      "target": "es2017",
      "noImplicitAny": false,
      "module": "commonjs",
      "removeComments": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": false,
      "allowJs": true,
      "types": [
         "node"
      ],
      "outDir": "./publish/",
      "resolveJsonModule": true
   },
   "include": [
      "**/*.ts"
   ],
   "exclude": [
      "**/node_modules/",
      "**/dist/",
      "**/server_template",
      "**/test"
   ]
}